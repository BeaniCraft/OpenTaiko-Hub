:root {
	/* =~= Theme Properties =~= */
	--theme-font-family-base: system-ui;
	--theme-font-family-heading: system-ui;
	--theme-font-color-base: 0 0 0;
	--theme-font-color-dark: 255 255 255;
	--theme-rounded-base: 9999px;
	--theme-rounded-container: 8px;
	--theme-border-base: 1px;
	/* =~= Theme On-X Colors =~= */
	--on-primary: 0 0 0;
	--on-secondary: 255 255 255;
	--on-tertiary: 0 0 0;
	--on-success: 0 0 0;
	--on-warning: 0 0 0;
	--on-error: 255 255 255;
	--on-surface: 255 255 255;
	/* =~= Theme Colors  =~= */
	/* primary | #ca2800 */
	--color-primary-50: 247 223 217; /* ⬅ #f7dfd9 */
	--color-primary-100: 244 212 204; /* ⬅ #f4d4cc */
	--color-primary-200: 242 201 191; /* ⬅ #f2c9bf */
	--color-primary-300: 234 169 153; /* ⬅ #eaa999 */
	--color-primary-400: 218 105 77; /* ⬅ #da694d */
	--color-primary-500: 202 40 0; /* ⬅ #ca2800 */
	--color-primary-600: 182 36 0; /* ⬅ #b62400 */
	--color-primary-700: 152 30 0; /* ⬅ #981e00 */
	--color-primary-800: 121 24 0; /* ⬅ #791800 */
	--color-primary-900: 99 20 0; /* ⬅ #631400 */
	/* secondary | #d75558 */
	--color-secondary-50: 249 230 230; /* ⬅ #f9e6e6 */
	--color-secondary-100: 247 221 222; /* ⬅ #f7ddde */
	--color-secondary-200: 245 213 213; /* ⬅ #f5d5d5 */
	--color-secondary-300: 239 187 188; /* ⬅ #efbbbc */
	--color-secondary-400: 227 136 138; /* ⬅ #e3888a */
	--color-secondary-500: 215 85 88; /* ⬅ #d75558 */
	--color-secondary-600: 194 77 79; /* ⬅ #c24d4f */
	--color-secondary-700: 161 64 66; /* ⬅ #a14042 */
	--color-secondary-800: 129 51 53; /* ⬅ #813335 */
	--color-secondary-900: 105 42 43; /* ⬅ #692a2b */
	/* tertiary | #ffc6c6 */
