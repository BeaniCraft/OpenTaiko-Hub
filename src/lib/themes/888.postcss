	--color-surface-800: 153 153 153; /* ⬅ #999999 */
	--color-surface-900: 125 125 125; /* ⬅ #7d7d7d */
}

a {@apply text-red-600 !important;}

/* Background */
html, body { @apply h-full; }
body {
	background-image:
		radial-gradient(at 40% 26%, hsla(0,100%,80%,1) 0px, transparent 50%),
		radial-gradient(at 83% 11%, hsla(0,100%,87%,1) 0px, transparent 50%),
		radial-gradient(at 11% 63%, hsla(355,100%,71%,1) 0px, transparent 50%),
		radial-gradient(at 71% 56%, hsla(340,100%,81%,1) 0px, transparent 50%),
		radial-gradient(at 0% 100%, hsla(0,100%,86%,1) 0px, transparent 50%),
		radial-gradient(at 80% 100%, hsla(0,100%,85%,1) 0px, transparent 50%),
		radial-gradient(at 0% 0%, hsla(11,0%,100%,1) 0px, transparent 50%);
	background-attachment: fixed;
	background-position: center;
	background-repeat: no-repeat;
	background-size: cover;
}