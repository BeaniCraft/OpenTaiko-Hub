	--color-surface-400: 77 205 247; /* ⬅ #4dcdf7 */
	--color-surface-500: 0 184 244; /* ⬅ #00b8f4 */
	--color-surface-600: 0 166 220; /* ⬅ #00a6dc */
	--color-surface-700: 0 138 183; /* ⬅ #008ab7 */
	--color-surface-800: 0 110 146; /* ⬅ #006e92 */
	--color-surface-900: 0 90 120; /* ⬅ #005a78 */
	
}

a {@apply text-gray-900 !important;}

button.play {background-color: rgba(115, 124, 252, 1) !important;}
button.play:hover {background-color: rgba(177, 176, 255, 1) !important;}
button.play:active {background-color: rgba(59, 72, 247, 1) !important;}
.slider {background: rgba(28, 31, 73, 1) !important;}
.progress {background: rgba(55, 58, 212, 1) !important;}

/* Background */
html, body { @apply h-full; }
body {
	background-image:
		radial-gradient(at 40% 26%, hsla(225,100%,94%,1) 0px, transparent 50%),
		radial-gradient(at 83% 11%, hsla(228,100%,72%,1) 0px, transparent 50%),
		radial-gradient(at 11% 63%, hsla(229,100%,78%,1) 0px, transparent 50%),
		radial-gradient(at 71% 56%, hsla(228,100%,70%,1) 0px, transparent 50%),
		radial-gradient(at 0% 100%, hsla(222,100%,58%,1) 0px, transparent 50%),
		radial-gradient(at 80% 100%, hsla(229,100%,90%,1) 0px, transparent 50%),
		radial-gradient(at 0% 0%, hsla(229,100%,68%,1) 0px, transparent 50%);
	background-attachment: fixed;
	background-position: center;
	background-repeat: no-repeat;
	background-size: cover;
}