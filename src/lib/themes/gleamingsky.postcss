:root {
	/* =~= Theme Properties =~= */
	--theme-font-family-base: system-ui;
	--theme-font-family-heading: system-ui;
	--theme-font-color-base: 0 0 0;
	--theme-font-color-dark: 255 255 255;
	--theme-rounded-base: 9999px;
	--theme-rounded-container: 8px;
	--theme-border-base: 1px;
	/* =~= Theme On-X Colors =~= */
	--on-primary: 0 0 0;
	--on-secondary: 255 255 255;
	--on-tertiary: 0 0 0;
	--on-success: 0 0 0;
	--on-warning: 0 0 0;
	--on-error: 255 255 255;
	--on-surface: 255 255 255;
	/* =~= Theme Colors  =~= */
	/* primary | #2d96ff */
	--color-primary-50: 224 239 255; /* ⬅ #e0efff */
	--color-primary-100: 213 234 255; /* ⬅ #d5eaff */
	--color-primary-200: 203 229 255; /* ⬅ #cbe5ff */
	--color-primary-300: 171 213 255; /* ⬅ #abd5ff */
	--color-primary-400: 108 182 255; /* ⬅ #6cb6ff */
	--color-primary-500: 45 150 255; /* ⬅ #2d96ff */
	--color-primary-600: 41 135 230; /* ⬅ #2987e6 */
	--color-primary-700: 34 113 191; /* ⬅ #2271bf */
	--color-primary-800: 27 90 153; /* ⬅ #1b5a99 */
	--color-primary-900: 22 74 125; /* ⬅ #164a7d */
	/* secondary | #7788ff */
	--color-secondary-50: 235 237 255; /* ⬅ #ebedff */
	--color-secondary-100: 228 231 255; /* ⬅ #e4e7ff */
	--color-secondary-200: 221 225 255; /* ⬅ #dde1ff */
	--color-secondary-300: 201 207 255; /* ⬅ #c9cfff */
	--color-secondary-400: 160 172 255; /* ⬅ #a0acff */
	--color-secondary-500: 119 136 255; /* ⬅ #7788ff */
	--color-secondary-600: 107 122 230; /* ⬅ #6b7ae6 */
	--color-secondary-700: 89 102 191; /* ⬅ #5966bf */
	--color-secondary-800: 71 82 153; /* ⬅ #475299 */
	--color-secondary-900: 58 67 125; /* ⬅ #3a437d */
	/* tertiary | #c6fcff */
	--color-tertiary-50: 246 255 255; /* ⬅ #f6ffff */
	--color-tertiary-100: 244 254 255; /* ⬅ #f4feff */
	--color-tertiary-200: 241 254 255; /* ⬅ #f1feff */
	--color-tertiary-300: 232 254 255; /* ⬅ #e8feff */
	--color-tertiary-400: 215 253 255; /* ⬅ #d7fdff */
	--color-tertiary-500: 198 252 255; /* ⬅ #c6fcff */
	--color-tertiary-600: 178 227 230; /* ⬅ #b2e3e6 */
	--color-tertiary-700: 149 189 191; /* ⬅ #95bdbf */
	--color-tertiary-800: 119 151 153; /* ⬅ #779799 */
	--color-tertiary-900: 97 123 125; /* ⬅ #617b7d */
	/* success | #16e100 */
	--color-success-50: 220 251 217; /* ⬅ #dcfbd9 */
	--color-success-100: 208 249 204; /* ⬅ #d0f9cc */
	--color-success-200: 197 248 191; /* ⬅ #c5f8bf */
	--color-success-300: 162 243 153; /* ⬅ #a2f399 */
	--color-success-400: 92 234 77; /* ⬅ #5cea4d */
	--color-success-500: 22 225 0; /* ⬅ #16e100 */
	--color-success-600: 20 203 0; /* ⬅ #14cb00 */
	--color-success-700: 17 169 0; /* ⬅ #11a900 */
	--color-success-800: 13 135 0; /* ⬅ #0d8700 */
	--color-success-900: 11 110 0; /* ⬅ #0b6e00 */
