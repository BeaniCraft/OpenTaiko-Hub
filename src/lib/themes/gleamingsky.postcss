	--color-warning-50: 253 249 217; /* ⬅ #fdf9d9 */
	--color-warning-100: 252 247 204; /* ⬅ #fcf7cc */
	--color-warning-200: 252 245 191; /* ⬅ #fcf5bf */
	--color-warning-300: 250 238 153; /* ⬅ #faee99 */
	--color-warning-400: 246 226 77; /* ⬅ #f6e24d */
	--color-warning-500: 242 213 0; /* ⬅ #f2d500 */
